doctype
html
  head
    meta[charset="UTF-8"]
    title Go Conference 2013 Autumn
    style
      html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        background: url(./geometry.png);
      }

      h1 {
        margin: 0;
        padding: 0;
        font-size: 120px;
        text-align: center;
        font-family: 'Hoefler Text';
      }
    script[type="text/javascript"][src="./zepto.min.js"]
    script[type="text/javascript"]
      $ = Zepto
      var resizedFunc = function() {
        $('h1').css({lineHeight: $(document).height() + "px"})
      };

      $(function() {
        $(window).on('resize', resizedFunc)
        resizedFunc()
      })
  body
    h1 Hello, #{Name}
